{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "module": "esnext",
    "skipLibCheck": true,

    /* Node mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,

    "paths": {
      "@/*": ["assets/src/*"]
    }
  },
  "include": [
    "./assets/**/*.ts",
    "./assets/**/*.vue",
    "./.eslintrc.js"
  ],
}
